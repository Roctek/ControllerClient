<Page x:Class="ControllerClient.ViewerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ControllerClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewerPage">

    <Grid Background="White">
        <Button x:Name="Back_Button_Copy" Content="Back" HorizontalAlignment="Center" Margin="0,0,725,0" VerticalAlignment="Top" Width="75" Click="Back_Button_Click" Foreground="#FFE5BD22" Cursor="Hand" FontWeight="Bold">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FF363653" Offset="0.996"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Page>
